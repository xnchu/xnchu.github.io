	file = {Full Text PDF:/Users/xnchu/Zotero/storage/SU54TU78/Li et al. - 2023 - Modeling Ring Current Proton Fluxes Using Artifici.pdf:application/pdf;Snapshot:/Users/xnchu/Zotero/storage/2HZ2FC26/2022SW003257.html:text/html},
