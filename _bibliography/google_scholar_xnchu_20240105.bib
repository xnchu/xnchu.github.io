	number = {5},
	journaltitle = {Science China Technological Sciences},
	shortjournal = {Sci. China Technol. Sci.},
	author = {Chu, {XiangNing} and Pu, {ZuYin} and Cao, Xin and Wang, Jue and Mishin, V. and Angelopoulos, V. and Liu, Jiang and Wei, Yong and Glassmeier, K. H. and Mcfadden, J. and Larson, D. and Mende, S. and Frey, H. and Russell, C. T. and Mann, I. and Sibeck, D. and Zong, {QiuGang} and Fu, {SuiYan} and Xie, Lun and Saifudinova, T. I. and Tolochko, M. V. and Sapronova, L. A. and Reme, H. and Lucek, E.},
