	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2023JA031686},
	keywords = {auroral streamer current wedgelet, field-aligned currents, high-speed earthward flows, magnetosphere-ionosphere coupling, north-south oriented streamers, spherical elementary current system},
	file = {Full Text PDF:/Users/xnchu/Zotero/storage/82ELU8J6/Aryan et al. - 2023 - A Statistical Analysis of the Auroral Streamer Cur.pdf:application/pdf;Snapshot:/Users/xnchu/Zotero/storage/QZW29VNL/2023ja031686.html:text/html},
