	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2023SW003524},
	keywords = {chorus waves, imbalanced regression, machine learning, neural network, radiation belt, Van Allen Probe},
	file = {Full Text PDF:/Users/xnchu/Zotero/storage/YWGVBFIU/Chu et al. - 2023 - Distribution and Evolution of Chorus Waves Modeled.pdf:application/pdf;Snapshot:/Users/xnchu/Zotero/storage/ZNFPXB6J/2023sw003524.html:text/html},
